@charset "utf-8";

@import 'module/config';
@import 'module/mixin';
@import 'module/page';

#game {
	overflow: hidden;
	list-style: none;
	border: 1px solid #666;
	width: areaSizingW;
	height: areaSizingH;
	padding: 0;
	margin: auto;
	position: relative;
	cursor: col-resize;
}

.bar {
	position: absolute;
	top: 0;
	z-index: 100;
	width: barCore;
	height: barLine;
	&:hover {
		z-index: 99;
		padding: 0 (barWidth / 2);
		margin-left: -(barWidth / 2);
		border-bottom: barHeight solid #000;
	}
}

for i in 1..100 {
	.bar{i} {
		left: (i * barGap) + (barWidth / 2);
	}
}

// stage
[id^=stage],
#gameover {
	position: absolute;
	bottom: 0;
	left: 0;
	width: areaSizingW;
	height: 0;
	background: #fcfcfc;
	animation-fill-mode: forwards;
}
#gameover {
	height: areaSizingH;
	background: #666;
	animations(keyOver, 0s, 16s);
	animation-fill-mode: forwards;
	z-index: 0;
}
.overTitle {
	margin: 80px 20px 0;
	text-shadow:0 1px 1px #222;
	font-size: 32px;
	font-weight: bold;
	color: #ddd;
	text-align: center;
}

#stage1 {
	height: areaSizingH;
	z-index: 1;
}

