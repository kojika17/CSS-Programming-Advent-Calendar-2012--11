for i in 2..stage {
	#stage{i} {
		z-index: i;
		overflow: hidden;
	}
}
#stage2,
#stage3,
#stage4,
#stage5,
#stage6 {
	animations(keyStage);
	animation-fill-mode: forwards;
	animation-play-state: paused;
}
.switch2:hover ~ #stage2,
.switch3:hover ~ #stage3,
.switch4:hover ~ #stage4,
.switch5:hover ~ #stage5,
.switch6:hover ~ #stage6 {
	animation-play-state: running;
}

